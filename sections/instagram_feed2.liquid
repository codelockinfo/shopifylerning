{%- liquid
  assign sid = section.id
  assign layout_des = section.settings.layout_des
  assign col = section.settings.col_pr
  assign col_tb = section.settings.col_pr_tb
  assign col_mb = section.settings.col_pr_mb
  assign block = section.blocks.first
  assign b_type = block.type
  assign acc = section.settings.acc2 | default:settings.global_acc -%}

<div class="nt_se_{{sid}} {{section.settings.layout}} pr">
  {%- if b_type == '1' -%}
    {%- render 'block_title',block:block,block_title:'mb__20' -%}
  {%- elsif b_type != blank -%}
    <div class="ins_content {{block.settings.pos}} t__0 l__0 r__0 b__0 flex fl_center al_center pe_none op__0 b_type_{{b_type}}">
      <div class="ins_content_wrap style_{{block.settings.des}} tc">
        {%- if b_type == '2' -%}
          <p></p>
          <h4 class="mg__0 fwsb fs__18">{{block.settings.title}}</h4>
          <h6 class="mb__10 cg fwm fs__12">{{block.settings.sub_title}}</h6>
          {{block.settings.content}}
          <p></p>
        {%- elsif b_type == '3' -%}
          <p></p>
          <h4 class="mg__0 fwsb fs__18">{{block.settings.title}}</h4>
          <hr class="hr_border mt__10 mb__10">
          {{block.settings.content}}
          <p></p>
        {%- else -%}
          <p class="sub-title mg__0 mb__5">{{block.settings.content}}</p>
          <h4 class="mg__0 fwsb fs__18">{{block.settings.title}}</h4>
        {%- endif -%} 
      </div>
    </div>
  {%- endif -%}
  <div data-id='{{col}}{{col_tb}}{{col_mb}}{{section.settings.limit}}{{section.settings.open_link}}' data-cl='{{col}}' data-cltb='{{col_tb}}' data-clmb='{{col_mb}}' data-acc='{{acc}}' data-limit='{{section.settings.limit}}' data-target='{{section.settings.open_link}}' class="row equal_nt ins_spaces_{{section.settings.space}} ins_rounded_{{section.settings.rounded_ins}} {{section.settings.image_size}} {{section.settings.image_ratio}} position_{{section.settings.image_position}} se_instagram js_nt_ist{% if layout_des == '2' %} js_carousel nt_slider prev_next_{{section.settings.btn_color}} btn_owl_{{section.settings.btn_owl}} dot_owl_{{section.settings.dot_owl}} dot_color_{{section.settings.dot_color}} btn_vi_{{section.settings.btn_vi}}{% endif %}"{% if layout_des == '2' %} data-flickityjs='{"imagesLoaded": 0,"adaptiveHeight": 1, "contain": 1, "groupCells": "100%", "dragThreshold" : 5, "cellAlign": "left","wrapAround": {{section.settings.loop}},"prevNextButtons": {{section.settings.button}},"percentPosition": 1,"pageDots": {{section.settings.dot}}, "autoPlay" : {{ section.settings.au_time | times: 1000 }}, "pauseAutoPlayOnHover" : {{section.settings.au_hover}}, "rightToLeft": {{settings.use_rtl}} }'{% endif %}>{% if acc != blank %}<div class="lds_bginfinity pr"></div>{% endif %}</div>
</div>
