{%- style -%}
    {%- for block in section.blocks %}{% assign bid = block.id %}{% assign btype = block.type %}{% assign bk_stts = block.settings -%}
    {%- if btype == 'image' -%}
      {%- assign image = bk_stts.image %}{% assign image_mb = bk_stts.image_mb |default:image -%}
       #bk_{{bid}} .nt_promotion>a:after{ background-color: {{bk_stts.cl_overlay}};opacity: {{bk_stts.cl_opacity | divided_by: 100.00}} }
       {%- if image != blank -%}
         #bk_{{bid}} .mb_img_slide.nt_bg_lz {padding-top:{{ 1 | divided_by: image_mb.aspect_ratio | times: 100}}%;}
         @media (min-width: 768px) {
            #bk_{{bid}} .dek_img_slide.nt_bg_lz {padding-top:{{ 1 | divided_by: image.aspect_ratio | times: 100}}%;}
         }
         {%- if bk_stts.bg_content_bl -%}
            #bk_{{bid}} .pa_txts>div {
              {%- assign bg_content_op = bk_stts.bg_content_op | divided_by: 100.0 -%}
              color: {{ bk_stts.bg_content_cl | color_modify: 'alpha', bg_content_op }};
              background-color: currentColor;
              {%- if bk_stts.border_bl -%}
              border-color: {{bk_stts.br_color}};
              box-shadow: 0 0 0 {{bk_stts.br_pd_mb}}px currentColor;
              {%- endif -%}
              padding: {{ bk_stts.content_pd_mb}};
            }
            @media (min-width: 768px) {
              #bk_{{bid}} .pa_txts>div {
                padding: {{ bk_stts.content_pd}};
                {%- if bk_stts.border_bl -%}
                box-shadow: 0 0 0 {{bk_stts.br_pd}}px currentColor;
                {%- endif -%}
              }
            }
         {%- endif -%}
       {%- endif -%}

    {%- elsif btype == 'html' %}{% continue -%}
    {%- elsif btype == '4' -%}
       #b_{{bid}} {width: {{bk_stts.w_mb}}px;margin: {{bk_stts.sp_mb}}px 0 {{bk_stts.spb_mb}}px;height: {{bk_stts.h_mb}}px;background-color: {{bk_stts.color}}}
       @media (min-width: 768px) { #b_{{bid}} {width: {{bk_stts.w}}px;margin: {{bk_stts.sp}}px 0 {{bk_stts.spb}}px;height: {{bk_stts.h}}px} }
    {%- elsif btype == 'btn' -%}
      #b_{{bid}}{ padding-left:{{bk_stts.pd_mb}}px;padding-right:{{bk_stts.pd_mb}}px;border-radius:{{bk_stts.bdr_mb}}px;{% if bk_stts.ls_mb_text != 0 %}letter-spacing:{{bk_stts.ls_mb_text}}px;{% endif %}min-height:{{bk_stts.h_mb}}px;font-size: {{bk_stts.fs_mb_text}}px;color: {{bk_stts.cl_txt}};background-color: {{bk_stts.cl_bg}};border-color: {{bk_stts.cl_bd}} }#b_{{bid}}.btn_icon_true:after {color: {{bk_stts.cl_txt}} }
      @media (min-width: 768px) {#b_{{bid}} { padding-left:{{bk_stts.pd}}px;padding-right:{{bk_stts.pd}}px;border-radius:{{bk_stts.bdr}}px;{% if bk_stts.ls_text != 0 %}letter-spacing:{{bk_stts.ls_text}}px;{% endif %}font-weight: {{bk_stts.fw_text}};min-height:{{bk_stts.h}}px;font-size: {{bk_stts.fs_text}}px }}
    {%- elsif btype == 'space' -%}
      #b_{{bid}} {height: {{bk_stts.sp_mb}}px}@media (min-width: 768px) {#b_{{bid}} { height:{{bk_stts.sp}}px} }
    {%- else -%}
      #b_{{bid}} { {% if bk_stts.content_pd_mb != blank %}padding:{{bk_stts.content_pd_mb}};{% endif %}{% if bk_stts.ls_mb_text != 0 %}letter-spacing:{{bk_stts.ls_mb_text}}px;{% endif %}{% if bk_stts.lh_mb_text != 0 %}line-height:{{bk_stts.lh_mb_text}}px;{% endif %}font-size: {{bk_stts.fs_mb_text}}px;font-weight: {{bk_stts.fw_text}};color: {{bk_stts.color}} }@media (min-width: 768px) {#b_{{bid}} { {% if bk_stts.content_pd != blank %}padding:{{bk_stts.content_pd}};{% endif %}{% if bk_stts.ls_text != 0 %}letter-spacing:{{bk_stts.ls_text}}px;{% endif %}{% if bk_stts.lh_text != 0 %}line-height: {{bk_stts.lh_text}}px;{% endif %}font-size: {{bk_stts.fs_text}}px}}
    {%- endif -%}
    {%- endfor -%}
{%- endstyle -%}


