{%- liquid
  assign sid = section.id
  assign rtl = settings.use_rtl
  if rtl 
    assign ltr = false 
  else 
    assign ltr = true  
  endif
  assign index = 1
  assign se_blocks = section.blocks
  assign arr_blocks_img = se_blocks | where: "type", 'image' -%}
  
<div class="nt_se_{{sid}} type_css_btna {{section.settings.layout}}">
  {%- render 'section_title' -%}
  <div class="mt__30 nt_banner_holder row fl_center js_packery cat_space_{{section.settings.cat_space}}" data-packery='{ "itemSelector": ".cat_space_item","gutter": 0,"percentPosition": true,"originLeft": {{ltr}} }'> 
    <div class="grid-sizer"></div>
    {%- for block in arr_blocks_img %}{% assign bk_stts = block.settings %}{% assign image = bk_stts.image -%}
      <div class="cat_space_item hoverz_{{bk_stts.hoverz}} col-lg-{{bk_stts.col_pr}} col-md-{{bk_stts.col_pr_tb}} col-{{bk_stts.col_pr_mb}} pr_animated done bg_content_{{bk_stts.bg_content_bl}} border_bl_{{bk_stts.border_bl}} br_style_{{bk_stts.br_style}}" id="bk_{{block.id}}">
        <div class="banner_hzoom nt_promotion oh pr">
          {%- if image != blank %}{% assign image_mb = bk_stts.image_mb |default:image -%}
            <div class="dek_img_slide nt_bg_lz pr_lazy_img lazyload item__position {{bk_stts.img_align}}" data-bgset="{{ image | img_url: '1x1' }}" data-ratio="{{image.aspect_ratio}}" data-sizes="auto" data-parent-fit="cover"></div>
            <div class="mb_img_slide nt_bg_lz pr_lazy_img lazyload item__position {{bk_stts.img_align}}" data-bgset="{{ image_mb | img_url: '1x1' }}" data-ratio="{{image_mb.aspect_ratio}}" data-sizes="auto" data-parent-fit="cover"></div>
          {%- else -%}
            {%- capture cl -%}{% cycle 'a8dacc', 'f76b6a' %}{%- endcapture -%}
            <div class="nt_bg_lz pr_lazy_img lazyload item__position {{bk_stts.img_align}}" data-bg="https://placehold.jp/50/{{cl}}/{{cl}}/530x600.png?text=1" style="padding-top:52.63157894736842%"></div>
          {%- endif -%}
          <a href="{{ bk_stts.url }}" target="{{bk_stts.open_link}}" class="pa t__0 l__0 r__0 b__0{% if bk_stts.url == blank %} pe_none{% endif %}"></a>
          <div class="nt_promotion_html pa t__0_ l__0_ pa_txts mb_h_pos{{bk_stts.cap_h_pos_mb}} mb_v_pos{{bk_stts.cap_v_pos_mb}} h_pos{{bk_stts.cap_h_pos}} v_pos{{bk_stts.cap_v_pos}} {{bk_stts.txt_align}} {{bk_stts.txt_align_mb}} pe_none z_100">
              <div class="wrap_html_block">
              {%- for block in se_blocks offset:index %}{% assign bk_stts = block.settings %}{% assign index = index|plus:1 -%}
                 {%- case block.type -%}
                    {%- when 'hd' -%}
                       <h3 id="b_{{block.id}}" class="slt4_h3 lh__1 mg__0" {{ block.shopify_attributes }}>{{bk_stts.title}}</h3>
                    {%- when 'subhd' -%}
                       <h4 id="b_{{block.id}}" class="slt4_h4 mg__0 lh__1 {{bk_stts.font}}{% if bk_stts.hide %} dn db_md{% endif %}" {{ block.shopify_attributes }}>{{bk_stts.title}}</h4>
                    {%- when 'txt' -%}
                       <p id="b_{{block.id}}" class="slt4_p mg__0{% if bk_stts.hide %} dn db_md{% endif %}" {{ block.shopify_attributes }}>{{bk_stts.title}}</p> 
                    {%- when '4' -%}<div id="b_{{block.id}}" class="space_banner dib" {{ block.shopify_attributes }}></div>
                    {%- when 'btn' -%}
                       {%- if bk_stts.btn_link != blank and bk_stts.title != blank -%}<a id="b_{{block.id}}" class="slt4_btn button pe_auto round_{{bk_stts.btn_round}} btn_icon_{{bk_stts.btn_icon}}" href="{{bk_stts.btn_link}}" target="{{open_link}}" {{ block.shopify_attributes }}>{{bk_stts.title}}</a>{%- endif -%}
                       {%- if bk_stts.btn_link2 != blank and bk_stts.title2 != blank -%}<a id="b_{{block.id}}" class="slt4_btn button pe_auto btn_style_{{bk_stts.btn_style}} round_{{bk_stts.btn_round}} btn_icon_{{bk_stts.btn_icon}}" href="{{bk_stts.btn_link2}}" target="{{open_link}}" {{ block.shopify_attributes }}>{{bk_stts.title2}}</a>{%- endif -%}
                    {%- when 'html' -%}
                       <div id="b_{{block.id}}" class="slt4_html" {{ block.shopify_attributes }}>{{bk_stts.html}}</div>
                    {%- when 'space' -%}
                       <div id="b_{{block.id}}" class="slt4_space" {{ block.shopify_attributes }}></div>
                    {%- else -%}{%- break -%}
                 {%- endcase -%}
              {%- endfor -%}
              </div>
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

