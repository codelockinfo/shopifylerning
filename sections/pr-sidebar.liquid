               <h5 class="widget-title">{{ block.settings.title }}</h5>
               {%- if block.settings.text != blank -%}{{block.settings.text}}{%- endif -%}
            </div>
     {%- endcase -%}
  {%- endfor -%}

{%- else -%}
<div class="tc">{%- include 'no_blocks'-%}</div>   
