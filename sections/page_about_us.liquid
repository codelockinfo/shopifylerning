{%- if section.blocks.size > 0 -%}
  <div class="row fl_center mt__60 mb__100">
  {%- for block in section.blocks -%}
  {%- case block.type -%}
      {%- when '8' -%}
         <div class="id_block_{{block.id}} col-12 mt__25 mb__50">
          {%- if settings.map != blank %}<style>.se_contact_map iframe {margin-bottom: 0;padding: 0;display: block;width: 100%;border: none;}</style><div class="se_contact_map">{{settings.map}}</div>{% endif -%}
         </div>
      {%- when '1' -%}
         <div class="id_block_{{block.id}} col-{{block.settings.cl_mb}} col-md-{{block.settings.cl}} {{block.settings.al}} mt__25">
            <h3 class="fs__20">{{block.settings.title}}</h3>
            <p class="mg__0">{{block.settings.content}}</p>
         </div>
      {%- when '5' -%}
         <div class="block_rich_txt2 id_block_{{block.id}} col-{{block.settings.cl_mb}} col-md-{{block.settings.cl}} {{block.settings.al}} mt__25">
            <h3 class="fs__20">{{block.settings.title}}</h3>
            <div class="content_rich_txt">{{block.settings.content}}</div>
         </div>
      {%- when '6' -%}
         <div class="block_html id_block_{{block.id}} col-{{block.settings.cl_mb}} col-md-{{block.settings.cl}} {{block.settings.al}} mt__25">
            <div class="content_html">{{block.settings.html}}</div>
         </div>
      {%- when '7' -%}
         <div class="block_social tc id_block_{{block.id}} col-{{block.settings.cl_mb}} col-md-{{block.settings.cl}} {{block.settings.al}} mt__25">
            {%- liquid
                if block.settings.social_mode == '2'
                  assign follow_social = true
                endif
                render 'social-sharing', social-sharing:'mt__15',share_permalink:shop.url,share_title:shop.name,follow_social:follow_social -%}
         </div>
      {%- when '2' -%}
         <div class="col-12 mt__35"><blockquote><p> {{block.settings.title}}</p></blockquote></div>
      {%- when '3' -%}
         <div class="col-12 col-md-4 mt__30">
            <div class="jas-member tc pr pb__15">
               {%- if block.settings.image -%}{%- assign image = block.settings.image %}{% assign ratio = image.aspect_ratio -%}
               <div class="nt_img_ratio lazyload nt_bg_lz" data-bgset="{{ image | img_url: '1x1' }}" data-parent-fit="width" data-wiis data-ratio="{{ratio}}" data-sizes="auto" style="padding-top:{{ 1 | divided_by: ratio | times: 100}}%;"></div>
               {%- endif -%}
               <h4 class="mt__15 fwsb">{{block.settings.title}}</h4>
               <span>{{block.settings.position}}</span>
               {%- liquid
                assign social_icons = false
                if block.settings.facebook != blank or block.settings.twitter != blank or block.settings.instagram != blank or block.settings.dribbble != blank or block.settings.behance != blank
                  assign social_icons = true
                endif
                if social_icons
                  assign socials = "facebook twitter instagram dribbble behance" | split: ' '
                endif -%}
                {%- if social_icons -%}
                <div class="social pa w__100 ts__03">
                  {%- for social_link in socials %}{% if block.settings[social_link] != blank -%}
                  <a class="{{social_link}}" href="{{ block.settings[social_link] | escape }}" target="_blank"><i class="lab la-{{social_link}} la-{{social_link}}-f"></i></a>
                  {%- endif %}{% endfor -%}
                </div>
                {%- endif -%}
            </div>
         </div>
      {%- else -%}
         <div class="col-12 pg_us_content">{{page.content}}</div>
   {%- endcase -%}
   {%- endfor -%}
  </div>
   <style>.jas-member:before{content:'';position:absolute;background:rgba(246,246,246,.9);left:0;top:0;width:100%;height:100%;opacity:0;transition:all .3s;z-index:1}.jas-member:hover .social,.jas-member:hover:before{opacity:1}.jas-member .social{bottom:30px;opacity:0;z-index:2}.jas-member h4{margin-bottom:0}.jas-member .social a{margin:0 8px}.jas-member .social i{font-size:20px}.jas-member .nt_img_ratio{background-size:cover;background-repeat:no-repeat;background-position:center}</style>
{%- endif -%}

