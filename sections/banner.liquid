{%- liquid
  assign sid = section.id
  assign ccol = 'col-lg-1x col-md-2x col-3x' | replace: '1x', section.settings.col | replace: '2x', section.settings.col_md | replace: '3x', section.settings.col_mb 
  assign ratio = section.settings.image_ratio
  assign ck = false
  if ratio == 'auto'
  assign ck = true
  endif -%}
   
<div class="nt_se_{{sid}} {{section.settings.layout}}">
  {%- render 'section_title',section:section -%}
  <div class="mt__30 nt_banner_holder row equal_nt {{ratio}} hoverz_{{section.settings.hoverz}} cat_space_{{section.settings.cat_space}} txt_shadow_{{section.settings.use_shadow}}">
    {%- for block in section.blocks -%}{%- assign image = block.settings.image -%}{%- assign cat_design = block.settings.cat_design -%}
      <div class="cat_space_item bk_{{block.id}} {{ccol}}">
        <div class="nt_promotion oh pr middle center banner_design_{{cat_design}}">
          <a href="{{ block.settings.url | default:'#' }}" class="db" target="{{block.settings.open_link}}">
            {%- if image != blank -%}
              <div class="nt_bg_lz lazyload item__position {{block.settings.img_align}}" data-bgset="{{ image | img_url: '1x1' }}" data-ratio="{{image.aspect_ratio}}" data-sizes="auto" data-parent-fit="cover"{% if ck %} style="padding-top:{{ 1 | divided_by: image.aspect_ratio | times: 100}}%"{% endif %}></div>
            {%- else -%}
              {%- capture cl -%}{% cycle 'a8dacc', '56cfe1' %}{%- endcapture -%}
              <div class="nt_bg_lz lazyload item__position {{block.settings.img_align}}" data-bg="https://placehold.jp/{{cl}}/{{cl}}/530x600.png?text=1" style="padding-top:52.63157894736842%"></div>
            {%- endif -%}
          </a>
          <div class="pa t__0 l__0 b__0 r__0 flex column shadow_wrap {{block.settings.txt_align}} {{block.settings.banner_align}}{% if block.settings.url != blank %} pe_none{% endif %}">
            {%- if cat_design == '1' -%}
              <h3 class="fwm fs__24 mg__0 mb__5 ls__1 lh__1">{{block.settings.title}}</h3>
              <h4 class="mg__0 fs__14">{{block.settings.title_2}}</h4>
            {%- else %}{% assign title_2 = block.settings.title_2 | split:'|' -%}
              {%- if title_2[1] != blank -%}
                <h3 class="fwm fs__20 mg__0 mb__5 ls__1">{{block.settings.title}}</h3>
                <h4 class="mg__0 fs__60 lh__1">{{title_2[0] | strip}}</h4>
                <h3 class="fwm fs__20 mg__0 ls__1">{{title_2[1] | strip}}</h3>
              {%- else -%}
                <h3 class="fwm fs__18 mg__0 mb__5 ls__1">{{block.settings.title}}</h3>
                <h4 class="mg__0 fs__50 lh__1">{{block.settings.title_2}}</h4>
              {%- endif -%}
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div> 

{%- render 'section_css' -%}
{%- style -%}
  .nt_se_{{sid}} .nt_promotion h3,.nt_se_{{sid}} .nt_promotion h4{ color: {{section.settings.cl_txt}} }
  .nt_se_{{sid}} .nt_promotion>a:after{ background-color: {{section.settings.cl_overlay}};opacity: {{section.settings.cl_opacity | divided_by: 100.00}} }
{%- endstyle -%}

