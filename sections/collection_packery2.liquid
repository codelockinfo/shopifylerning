{%- liquid
  assign rtl = settings.use_rtl
  if rtl 
    assign ltr = false 
  else 
    assign ltr = true  
  endif
  assign se_stts = section.settings
  assign layout = se_stts.layout
  assign image = se_stts.image
  assign use_pagination = se_stts.use_pagination 
  assign sett_equal = se_stts.use_eq_height
  assign show_vendor = se_stts.show_vendor
  assign col = se_stts.col_pr
  assign col_tb = se_stts.col_pr_tb
  assign col_mb = ' pr_animated done' | prepend:se_stts.col_pr_mb
  assign inc_pr = '1'
  assign limit = se_stts.limit
  assign sid = section.id 
  assign inc_price = settings.price_format
  assign use_rating = settings.use_pr_rating
  assign inc_rating = settings.app_review
  assign show_color = settings.show_pr_color
  assign show_cl_type = settings.show_color_type
  assign show_size = settings.show_pr_size
  assign current_page = '1'
  assign use_cdt = se_stts.use_cdt
  assign txt_cd = 'products.grid_items.offer_end_in' | t
  assign ck_noPr = true
  if layout == 'wrap'
   assign html_layout = '<div class="container">__</div>' | split:'__'
  else
   assign html_layout = '__' | split:'__'
  endif -%}

  <div class="nt_se_{{sid}} {{layout}}{%- if image != blank %} hide_bgimg_{{se_stts.hide_bgimg}} lazyload se_t4_bg nt_parallax_{{se_stts.use_pr}}{%- endif -%}"{% if image != blank %} data-bgset="{{ image | img_url: '1x1' }}" data-ratio="{{image.aspect_ratio}}" data-sizes="auto" data-parent-fit="cover"{% endif %}>
    {{-html_layout[0]-}}
    {%- render 'section_title',section:section -%}
    <div class="js_packery nt_packery products nt_products_holder row fl_center row_pr_{{inc_pr}} cdt_des_{{se_stts.cdt_des}} round_cd_{{se_stts.round_cd}} {{se_stts.image_size}} {{se_stts.image_ratio}} position_{{se_stts.image_position}} space_{{se_stts.space}}{%- if sett_equal %} equal_nt{%- endif -%}" data-packery='{ "itemSelector": ".pr_grid_item","gutter": 0,"percentPosition": true,"originLeft": {{ltr}} }'>
        {%- if section.blocks.size > 0 -%}
          {%- for block in section.blocks %}
            {%- liquid
            assign link = block.settings.product2
            assign stt_pr = all_products[block.settings.product]
            if link.type == "product_link" and link != blank
              assign product = link.object
            elsif stt_pr != blank
              assign product = stt_pr
            else
              continue
            endif
            assign ck_noPr = false
            if block.settings.set_pr 
              assign col = '6' 
            else 
              assign col = '3' 
            endif
            render 'pr_loop_grid_1',product:product,use_cdt:use_cdt,txt_cd:txt_cd, col:col, col_tb:col_tb, col_mb:col_mb,url_cat:url_cat,sett_equal:sett_equal,show_vendor:show_vendor,inc_price:inc_price,use_rating:use_rating,inc_rating:inc_rating,show_color:show_color,show_cl_type:show_cl_type,show_size:show_size -%}
          {%- endfor -%}
        {%- endif -%}
        {%- if ck_noPr -%}
           {%- for i in (1..14) -%}
              <div class="pr_animated mt__30 pr_grid_item product nt_pr desgin__1 col-6 col-lg-{% cycle 'group1':'3','6','3','3','3','3','3','3','3','6','3','3','3' %} col-md-3 done">
                 <div class="product-inner pr">
                   <div class="product-image pr oh"><a class="db" href="/admin/products">{% capture current %}{% cycle 'group2':'1','2','3','4','5','6','7','8' -%}{% endcapture %}<div class="pr_lazy_img main-img nt_img_ratio nt_bg_lz lazyload" style="padding-top:100%" data-bg="{{ 'product-' | append:current | append:'.jpg' | asset_url }}"></div></a></div>
                   <div class="product-info mt__15"><h3 class="product-title pr fs__14 mg__0 fwm"><a class="cd chp" href="/admin/products">{{ 'homepage.onboarding.product_title' | t }}</a></h3><span class="price dib mb__5"><del>$59.00</del><ins>$39.00</ins></span></div>
                </div>
              </div>
           {%- endfor -%}
        {%- endif -%}
    </div>
    {{-html_layout[1]-}}
  </div>
