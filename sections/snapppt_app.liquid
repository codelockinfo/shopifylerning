{%- liquid
  assign sid = section.id
  assign page = section.settings.page -%}

<div class="nt_se_{{sid}} {{section.settings.layout}}">
  {%- render 'section_title',section:section -%}
  <div class="mt__30 ins_shop_wrap">{%- if page != blank -%}{{ pages[page].content | html }}{%- else -%}{%- render 'no-blocks' -%}{%- endif -%}</div>
</div>
{%- render 'section_css' -%}
