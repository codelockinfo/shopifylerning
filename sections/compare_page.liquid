        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Availability"
          }
        ]
      },
      {
        "type": "vendor",
        "name": "Vendor",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Vendor"
          }
        ]
      },
      {
        "type": "rating",
        "name": "Rating",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "title",
