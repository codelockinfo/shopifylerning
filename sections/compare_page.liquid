          },
          {
            "type": "select",
            "id": "style",
            "options": [
              {"value": "primary tu","label": "Button Primary"},
              {"value": "secondary","label": "Button Secondary"}
            ],
            "label": "Button Style: "
          }
        ]
      }
   ],
    "default": {
      "blocks": [
        {"type": "basic"},
        {"type": "availability"},
        {"type": "vendor"},
        {"type": "variants"},
        {"type": "btn"}
      ]
    }
  }
