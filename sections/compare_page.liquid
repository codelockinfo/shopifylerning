t:50%;margin-top:-9px;margin-left:-9px;opacity:0;transition:opacity 0s ease;content:"";display:inline-block;width:18px;height:18px;border:1px solid rgba(255,255,255,.3);border-left-color:#fff;border-radius:50%;vertical-align:middle}.compare_basic_content a.loading{color:transparent!important}.compare_basic_content a.loading:after{opacity:1;transition:opacity .25s ease;-webkit-animation:spin 450ms infinite linear;animation:spin 450ms infinite linear}.compare_basic_content .pr_qty_atc i,.compare_basic_content .pr_qty_atc span.tt_txt,.compare_basic_content a.nt_add_qv i,.compare_basic_content a.nt_add_qv span.tt_txt,.compare_basic_content a.pr_atc i,.compare_basic_content a.pr_atc span.tt_txt{display:none}.compare_basic_content .price{color:#006e52;color:#95bf46}.compare_availability .stock{color:#006e52;color:#95bf46;font-weight:500;font-size:14px;line-height:1.2}.compare_availability .out-of-stock{color:#e1b878}.compare_basic_content .onsale.nt_label{width:auto;height:auto;color:#fff;display:inline-block;padding:2px 4px;border-radius:2px;font-size:10px;margin:5px}.compare_basic_content img{max-height:250px;object-fit:contain}@media (max-width:1024px){.themet4_compare_table{overflow-x:auto;-webkit-overflow-scrolling:touch}.compare_value{flex:1 0 33.33333%}}@media (max-width:768px){.compare_field{display:none}.compare_value:before{content:attr(data-title);display:block;margin-top:-15px;margin-bottom:15px;padding:10px;width:100%;background-color:rgba(0,0,0,.03);color:#2d2a2a;text-transform:uppercase;font-weight:600;font-size:14px}.themet4_compare_col{flex:1 0 50%;justify-content:flex-start;background-color:transparent!important}}@media (max-width:575px){.themet4_compare_row .themet4_compare_col{flex:1 0 75%}}.products .product-image .nt_add_cp{display:none}.variations_button .nt_add_cp{display:none}</style>
    {%- style -%}
    .compare_basic_content a.nt_add_qv {background-color: {{section.settings.bg_qv}} }.compare_basic_content .pr_qty_atc .quantity, .compare_basic_content .pr_qty_atc a, .compare_basic_content a.pr_atc {background-color: {{section.settings.bg_atc}} }.compare_basic_content .price {color: {{section.settings.cl_price}} }.compare_availability .stock {color: {{section.settings.cl_in}} }.compare_availability .out-of-stock {color: {{section.settings.cl_out}} }
    {%- endstyle -%}
  
{%- else -%}
    <div class="empty_cart_page tc">
      <i class="las la-sync fwb pr mb__30 fs__90"></i>
      <h4 class="cart_page_heading mg__0 mb__20 tu fs__30">{{ 'general.compare.empty' | t }}</h4>
      <div class="cart_page_txt">{{ 'general.compare.empty_html' | t }}</div>
      {%- if btn_blocks.size > 0 -%}
         <div class="mt__30"></div>
         {%- for block in btn_blocks -%}<p class="mb__15"><a class="button button_{{block.settings.style}} js_add_ld" href="{{block.settings.url | default:routes.all_products_collection_url}}">{{ block.settings.title }}</a></p>{%- endfor -%}
       {%- endif -%}
    </div>
    <style>.tp_se_compare .la-sync:before {content: "\f021";color: rgba(142,142,142,.2);font-size: 180px;}.products .product-image .nt_add_cp {display: none;}.variations_button .nt_add_cp {display: none;}</style>
{%- endif -%}
</div>
{%- endpaginate -%}

