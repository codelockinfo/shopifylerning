{%- liquid
  assign se_stts = section.settings
  assign layout = se_stts.layout
  assign image = se_stts.image
  assign sett_equal = se_stts.use_eq_height
  assign col = se_stts.col_pr
  assign col_tb = se_stts.col_pr_tb 
  assign col_mb = ' pr_animated done' | prepend:se_stts.col_pr_mb
  assign limit = se_stts.limit
  assign use_pagination = se_stts.use_pagination
  assign blog = blogs[se_stts.blog]
  assign date = se_stts.date
  assign by = 'blogs.article.by' | t
  assign on = 'blogs.article.on' | t  
  assign show_au = se_stts.show_au
  assign show_dt = se_stts.show_dt
  assign show_cm = se_stts.show_cm
  assign show_cnt = se_stts.show_cnt
  assign show_rm = se_stts.show_rm
  assign art_des = se_stts.art_des
  assign sid = section.id
  if layout == 'wrap'
   assign html_layout = '<div class="container">__</div>' | split:'__'
  else
   assign html_layout = '__' | split:'__'
  endif -%}

{%- paginate blog.articles by limit -%}
  {%- if paginate.current_page > 1 and use_pagination == 'more' -%}
    {%- render 'ajax_blog_load',art_des:art_des,arr_results:blog.articles,paginate:paginate,date:date,by:by,on:on,show_au:show_au,show_dt:show_dt,show_cm:show_cm,col:col,col_tb:col_tb,col_mb:col_mb,sett_equal:sett_equal,show_rm:show_rm,show_cnt:show_cnt -%}
  {%- else -%}
    {%- assign current_page = '1' -%}
    {%- render 'section_css' -%} 
    {%- assign layout_des = se_stts.layout_des -%}
    
    <div class="nt_se_{{sid}} {{layout}}{%- if image != blank %} hide_bgimg_{{se_stts.hide_bgimg}} lazyload se_t4_bg nt_parallax_{{se_stts.use_pr}}{%- endif -%}"{% if image != blank %} data-bgset="{{ image | img_url: '1x1' }}" data-ratio="{{image.aspect_ratio}}" data-sizes="auto" data-parent-fit="cover"{% endif %}>
      {{-html_layout[0]-}}
      {%- render 'section_title',url:blog.url ,section_title:'mb__30' -%}
      <div class="articles art_des{{art_des}} nt_products_holder row {{se_stts.image_size}} {{se_stts.image_ratio}} position_{{se_stts.image_position}}{% if sett_equal %} equal_nt{% endif %}{% if layout_des == '2' %} js_carousel nt_slider prev_next_{{se_stts.btn_color}} btn_owl_{{se_stts.btn_owl}} dot_owl_{{se_stts.dot_owl}} dot_color_{{se_stts.dot_color}} btn_vi_{{se_stts.btn_vi}}{% endif %}"{% if layout_des == '2' %} data-flickity='{"imagesLoaded": 0,"adaptiveHeight": 1, "contain": 1, "groupCells": "100%", "dragThreshold" : 5, "cellAlign": "left","wrapAround": {{se_stts.loop}},"prevNextButtons": {{se_stts.button}},"percentPosition": 1,"pageDots": {{se_stts.dot}}, "autoPlay" : {{ se_stts.au_time | times: 1000 }}, "pauseAutoPlayOnHover" : {{se_stts.au_hover}}, "rightToLeft": {{settings.use_rtl}} }'{% endif %}>
          {%- if blog != blank -%}

            {%- case art_des -%}
               {%- when '1' -%}{%- for article in blog.articles -%}{%- render "article_loop",article:article,date:date,by:by,on:on,show_au:show_au,show_dt:show_dt,show_cm:show_cm,col:col,col_tb:col_tb,col_mb:col_mb,sett_equal:sett_equal,show_rm:show_rm,show_cnt:show_cnt -%}{%- endfor -%}
               {%- when '1 tc' -%}{%- for article in blog.articles -%}{%- render "article_loop",article:article,date:date,by:by,on:on,show_au:show_au,show_dt:show_dt,show_cm:show_cm,col:col,col_tb:col_tb,col_mb:col_mb,sett_equal:sett_equal,show_rm:show_rm,show_cnt:show_cnt -%}{%- endfor -%}
               {%- when '3' -%}{%- for article in blog.articles -%}{%- render "article_loop2",article:article,date:date,by:by,on:on,show_au:show_au,show_dt:show_dt,show_cm:show_cm,col:col,col_tb:col_tb,col_mb:col_mb,sett_equal:sett_equal,show_rm:show_rm,show_cnt:show_cnt -%}{%- endfor -%}
               {%- else -%}{%- for article in blog.articles -%}{%- render "article_loop1",article:article,date:date,by:by,on:on,show_au:show_au,show_dt:show_dt,show_cm:show_cm,col:col,col_tb:col_tb,col_mb:col_mb,sett_equal:sett_equal,show_rm:show_rm,show_cnt:show_cnt -%}{%- endfor -%}
            {%- endcase -%}

          {%- else -%}
             {%- for i in (1..3) -%}
               <article class="post-19041994 post post_nt_loop col-md-4 col-xs-12 mb__40">
                  <a class="mb__15 db oh bgb" href="/admin/blogs"><img class="w__100 lazyload lz_op_ef" src="data:image/svg+xml,%3Csvg%20viewBox%3D%220%200%20570%20320%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3C%2Fsvg%3E" data-src="https://placehold.jp/{% cycle '1aada3', '56cfe1', 'b59677' %}/fff/570x320.png?text=Gecko" alt="Gecko Shopify theme"></a>
                  <div class="post-info mb__10">
                     <h4 class="mg__0 fs__16 mb__5 ls__0"><a class="cd chp" href="/admin/blogs">Gecko shopify theme</a></h4>
                     <span class="post-author mr__5">By <span class="cd">Nathan</span></span><span class="post-time">on <span class="cd"><time class="entry-date published updated">April 19, 1994</time></span></span>
                  </div>
