          {%- if se_stts.use_bar_lm -%}{%- assign results_count = blog.articles_count -%}
          <div class="js_progress_bar" data-tt='{{results_count}}'>
            {%- assign current_pr_size = blog.articles.size | plus:paginate.current_offset -%}
             <p class="mg__0 progress_txt fs__15">{{ 'blogs.section.bar_with_count_html' | t:current_count:current_pr_size,total_count:results_count}}</p>
            <div class="progress_bar pr oh"><div class="current_bar pa t__0 r__0 l__0 b__0" style="width: {{current_pr_size | times:100.0 | divided_by: results_count}}%"></div></div>
          </div>
          {%- endif -%}
          <a class="se_cat_lm pr nt_cat_lm button button_{{se_stts.btn_style}} br_rd_{{se_stts.btn_rd}} btn_icon_{{se_stts.btn_icon}}" data-id={{sid}} data-get='{{ blog.url }}{{ paginate.next.url }}' href="{{ blog.url }}">{{ 'blogs.section.load_more' | t }}</a>
          {%- else -%}
          <a class="pr button view_more js_add_loading button_{{se_stts.btn_style}} br_rd_{{se_stts.btn_rd}} btn_icon_{{se_stts.btn_icon}}" href="{{ blog.url }}">{{ 'blogs.section.view_all' | t }}</a>
          {%- endif -%}
