      },
      {
        "type": "color",
        "id": "cl_h",
        "label": "Heading",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "cl_sub",
        "label": "Subheading",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "cl_btn",
        "label": "Button",
        "default": "#fff"
