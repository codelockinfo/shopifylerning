         "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
         "info": "Accepts YouTube,vimeo links"
      },
      {
        "type": "select",
        "id": "btn_style",
        "default": "1",
        "options": [
         {
            "value": "1",
            "label": "Style 1"
         },
         {
            "value": "2",
            "label": "Style 2"
          }
        ],
        "label": "Button Style"
      },
      {
         "type": "header",
         "content": "== Caption settings"
       },
      {
       "type": "select",
       "id": "design",
       "options": [
        {
           "value": "1",
           "label": "Design 1"
         },
         {
           "value": "2",
           "label": "Design 2"
         }
       ],
       "label": "Banners design",
       "default": "1"
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Text size",
        "default": "60,18",
        "options": [
          {
            "value": "30,15",
            "label": "Small"
          },
          {
            "value": "40,15",
            "label": "Medium"
          },
          {
            "value": "60,18",
            "label": "Large"
          }
        ]
      },
      {
        "type": "select",
        "id": "caption_w",
        "default": "2",
        "options": [
