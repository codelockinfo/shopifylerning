{%- liquid
  assign sid = section.id
  assign img_ratio = section.settings.image_ratio
  assign ck = false
  if img_ratio == 'auto'
    assign ck = true
  endif
  assign ccol = 'col-lg-1x col-md-2x col-3x' | replace: '1x', section.settings.col | replace: '2x', section.settings.col_md | replace: '3x', section.settings.col_mb
  assign img_align = section.settings.img_align
  assign action = section.settings.action
  assign rtl = settings.use_rtl 
  if rtl 
    assign ltr = false 
  else 
    assign ltr = true 
  endif-%}

{%- for i in (1..1) -%}
  {%- if section.settings.cp_code and request.page_type == 'index' and request.design_mode %}<div class="dn tc mt__40 mb__40 cp_cd_js"><input type="text" class="dcp_cd_ip" value='<div class="inc_lz inc_gl_laz" data-include="/search/?section_id={{sid}}"><div class="lds_bginfinity pr"></div></div>'><button class="dcp_cd_btn">Copy Shortcode</button></div>{% endif -%}
  {%- if section.settings.hidden and request.page_type == 'index' %}{% break %}{% endif -%}

  <div class="nt_se_{{sid}} {{section.settings.layout}} txt_shadow_{{section.settings.use_shadow}}">
    <div class="row equal_nt {{img_ratio}} cat_space_{{section.settings.cat_space}} al_center{% if section.settings.des_layout == '2' and ck %} js_packery{% endif %}"{% if section.settings.des_layout == '2' and ck %} data-packery='{ "itemSelector": ".nt_gallery_item","columnWidth": ".nt_gallery_item","gutter": 0,"percentPosition": true,"originLeft": {{ltr}} }'{% endif %}>
      {%- for block in section.blocks -%}
        {%- assign image = block.settings.image -%}{%- assign iw = image.width -%}
        <div class="nt_gallery_item cat_space_item {{ccol}} nt_{{block.id}}">
          <div class="pr oh middle center">
            {%- if action == '2' -%}<a href="#" class="db" data-src="{{image | img_url: 'master'}}" data-w="{{iw}}" data-h="{{image.height}}">{%- endif -%}
              {%- if image != blank -%}
                <div class="nt_bg_lz lazyload item__position {{img_align}}" data-bgset="{{ image | img_url: '1x1' }}" data-ratio="{{image.aspect_ratio}}" data-sizes="auto"{% if ck %} style="padding-top:{{ 1 | divided_by: image.aspect_ratio | times: 100}}%;"{% endif -%}></div>
              {%- else -%}
                <div class="nt_bg_lz lazyload item__position {{img_align}}" data-bg="https://placehold.jp/30/{% cycle 'a8dacc', '56cfe1', 'f99077','c8b09b','efe1ba','a5d0d9','a1a19f' %}/fff/570x630.png?text=Image+{{forloop.index}}" style="padding-top: 111.1111111111111%;"></div>
              {%- endif -%}
            {%- if action == '2' -%}</a>{%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>

{%- endfor -%}
