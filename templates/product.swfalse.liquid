{%- liquid
  layout none
  assign tooltip = "ttip_nt tooltip_top_right"
  assign color_ck = settings.color_ck | append:',color,colors,couleur,colour'
  assign get_color = color_ck | downcase | replace: ' ,', ',' | replace: ', ', ',' | split: ',' | uniq
  for option in product.options_with_values
	  assign name = option.name | downcase
	  if get_color contains name
	    assign pr_option = forloop.index
	    break
	  endif
  endfor
  assign nt_option = 'option'| append:pr_option
  assign pr_variants = product.variants
  if settings.show_color_type == '1'
    assign color_variants = pr_variants | map:nt_option | uniq
  else
    assign color_variants = pr_variants | where: "available" | map:nt_option | uniq 
  endif 
  assign img_variants = pr_variants | where: "featured_image"
  if settings.sw_click == '1'
    assign sw_click = "sw_click_go"
  endif -%}
  
{%- if img_variants.size > 0 -%}
  {%- if settings.pr_swatch_setting == '2' or product.tags contains 'sw_imgt4_on' -%}
		  {%- for color in color_variants -%}{%- assign img_arr = img_variants | where: nt_option, color -%}{%- assign cl_handle = color | handle -%}
		        {%- if img_arr.size > 0 -%}{%- assign image = img_arr[0].featured_image -%}
		           <span data-id="{{image.id}}" data-vid="{{img_arr[0].id}}" data-bgset="{%- render 'bgsetpr', image:image, ratio:image.aspect_ratio, iw:image.width -%}" data-pd="{{ 1 | divided_by: image.aspect_ratio | times: 100}}" class="nt_swatch_on_bg swatch__list--item pr {{tooltip}} js__{{ cl_handle }}"><span class="tt_txt">{{color}}</span><span class="swatch__value bg_color_{{ cl_handle }} lazyload" data-bg="{{image | img_url: '100x'}}"></span></span>
		        {%- else -%}
		           <span class="swatch__list--item pr {{tooltip}}"><span class="tt_txt">{{color}}</span><span class="swatch__value bg_color_{{ color | handle }} lazyload"></span></span>
		        {%- endif -%}
		  {%- endfor -%}
		  {%- if settings.sw_limit and color_variants.size > 2 %}<span class="swatch__list--item swatch__list--more {{sw_click}} pr {{tooltip}}"><span class="tt_txt">{{ 'general.swatch_limit' | t }}</span><span class="tt_txt op_0">{{ 'general.swatch_limit_less' | t }}</span><a href="{{ product.url | within: collection }}" class="swatch__value bg_color_limit4"></a></span>{% endif -%}
  {%- else -%}
		  {%- for color in color_variants -%}{%- assign img_arr = img_variants | where: nt_option, color -%}{%- assign cl_handle = color | handle -%}
		        {%- if img_arr.size > 0 -%}{%- assign image = img_arr[0].featured_image -%}
		           <span data-id="{{image.id}}" data-vid="{{img_arr[0].id}}" data-bgset="{%- render 'bgsetpr', image:image, ratio:image.aspect_ratio, iw:image.width -%}" data-pd="{{ 1 | divided_by: image.aspect_ratio | times: 100}}" class="nt_swatch_on_bg swatch__list--item pr {{tooltip}} js__{{ cl_handle }}"><span class="tt_txt">{{color}}</span><span class="swatch__value bg_color_{{ cl_handle }} lazyload"></span></span>
		        {%- else -%}
		           <span class="swatch__list--item pr {{tooltip}}"><span class="tt_txt">{{color}}</span><span class="swatch__value bg_color_{{ color | handle }} lazyload"></span></span>
		        {%- endif -%}
		  {%- endfor -%}
		  {%- if settings.sw_limit and color_variants.size > 2 %}<span class="swatch__list--item swatch__list--more {{sw_click}} pr {{tooltip}}"><span class="tt_txt">{{ 'general.swatch_limit' | t }}</span><span class="tt_txt op_0">{{ 'general.swatch_limit_less' | t }}</span><a href="{{ product.url | within: collection }}" class="swatch__value bg_color_limit4"></a></span>{% endif -%}
  {%- endif -%}
{%- else -%}
   {%- for color in color_variants -%}<span class="swatch__list--item pr {{tooltip}}"><span class="tt_txt">{{color}}</span><span class="swatch__value bg_color_{{ color | handle }} lazyload"></span></span>{%- endfor -%}
   {%- if settings.sw_limit and color_variants.size > 2 %}<span class="swatch__list--item swatch__list--more {{sw_click}} pr {{tooltip}}"><span class="tt_txt">{{ 'general.swatch_limit' | t }}</span><span class="tt_txt op_0">{{ 'general.swatch_limit_less' | t }}</span><a href="{{ product.url | within: collection }}" class="swatch__value bg_color_limit4"></a></span>{% endif -%}
{%- endif -%}